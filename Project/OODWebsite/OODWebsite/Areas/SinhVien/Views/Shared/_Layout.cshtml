<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://nucleoapp.com/?ref=1712" />
    <!-- CSS Files -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleTTSV.css" rel="stylesheet" />
    <link href="~/Content/paper-dashboard.css?v=2.0.1" rel="stylesheet" />
    <link href="~/Content/StyleUser.css" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Content/demo.css" rel="stylesheet" />
</head>
<body>

    <div class="wrapper ">
        <div class="sidebar">
            <div class="sidebar-wrapper bg-info">
                <ul class="nav">
                    <li class="active ">
                        <a href='@Url.Action("ThongTinSV_GD", "ThongTinSV_GD")'>
                            <p>Thông tin</p>
                        </a>
                    </li>

                    <li class="active ">
                        <a href='@Url.Action("DanhSachMo_GD", "DanhSachMo_GD")'>
                            <p>Danh sách học phần mở </p>
                        </a>
                    </li>

                    <li class="active ">
                        <a href='@Url.Action("DangKyHP_GD", "DangKyHP_GD")'>
                            <p>Đăng ký học phần</p>
                        </a>
                    </li>

                    <li class="active ">
                        <a href='@Url.Action("KQDKHP_GD", "KQDKHP_GD")'>
                            <p>Kết quả đăng kí học phần</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>


        <div class="container body-content">
            @RenderBody()

        </div>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
    <!--  Google Maps Plugin    -->
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Chart JS -->
    <script src="~/Scripts/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Scripts/paper-dashboard.min.js?v=2.0.1" type="text/javascript"></script>
    <script src="~/Scripts/demo.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>