
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/SinhVien/Views/Shared/_Layout.cshtml";
}

<div class="content ">
    <div class="card card-user">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card-header">
                    <h5 class="card-title">ĐỔI MẬT KHẨU</h5>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-black" })
                <table>
                    <tbody class="row">
                        <tr class="pr-1 form-group">
                            <td>Mật khẩu hiện tại</td>
                            <td>@Html.Password("MatKhauHienTai", "", new { @class = "text-black" })</td>
                        </tr>
                        <tr>
                            <td colspan="3" height="5">
                            </td>
                        </tr>
                        <tr class="pr-1 form-group">
                            <td>Mật khẩu mới</td>
                            <td>@Html.Password("MatKhauMoi", "", new { @class = "text-black" })</td>
                        </tr>
                        <tr>
                            <td colspan="3" height="5">
                            </td>
                        </tr>
                        <tr class="pr-1 form-group">
                            <td>Nhập lại mật khẩu</td>
                            <td>@Html.Password("MatKhauMoi2", "", new { @class = "text-blcak" })</td>
                        </tr>
                        <tr>
                            <td><input type="submit" value="Đổi mật khẩu" class="btn btn-primary" /></td>
                            <td>@Html.ActionLink("Hủy", "ThongTinSV_GD", null, new { @class = "btn btn-default" })</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
