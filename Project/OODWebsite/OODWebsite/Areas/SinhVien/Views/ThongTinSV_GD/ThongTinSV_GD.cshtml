@model OODWebsite.Models.SV
@{
    ViewBag.Title = "ThongTinSV_GD";
    Layout = "~/Areas/SinhVien/Views/Shared/_Layout.cshtml";
}

<div class="content ">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-user">
                <div class="card-header">
                    <h5 class="card-title">THÔNG TIN SINH VIÊN</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>MSSV: </label>
                                    @Html.DisplayFor(model => model.MSSV)
                                </div>
                            </div>
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>Bậc đào tạo: </label>
                                    @Html.DisplayFor(model => model.TenCTDT)
                                </div>
                            </div>
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>Họ và tên: </label>
                                    @Html.DisplayFor(model => model.HoTen)
                                </div>
                            </div>
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label>Khoa: </label>
                                    @Html.DisplayFor(model => model.Khoa)
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Giới tính: </label>
                                    @Html.DisplayFor(model => model.GioiTinh)
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Ngày sinh: </label>
                                    @Html.DisplayFor(model => model.NgaySinh)
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label>Khóa học: </label>
                                    @Html.DisplayFor(model => model.KhoaHoc)
                                </div>
                            </div>
                        </div>
                        @Html.ActionLink("Đổi mật khẩu", "Edit", null, new { @class = "btn btn-default" })
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


