@model IEnumerable<OODWebsite.Models.DSLHP>

@{
    ViewBag.Title = "Kết quả đăng ký";
    Layout = "~/Areas/NVPhongDaoTao/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>KẾT QUẢ ĐĂNG KÝ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("QuanLySV_GD", "QuanLySV_GD")'>Home</a></li>
                    <li class="breadcrumb-item active">Kết quả đăng ký</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    <b class="pl-5">Tìm kiếm:</b> @Html.DropDownList("Nam", Enumerable.Range(2019, 100).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
    @Html.DropDownList("HocKy", Enumerable.Range(1, 3).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
    <input type="submit" value="Tìm" class="btn btn-primary" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Mã học phần")
        </th>
        <th>
            @Html.DisplayName("Tên học phần")
        </th>
        <th>
            @Html.DisplayName("Tên lớp")
        </th>
        <th class="text-center">
            @Html.DisplayName("LT-TH")
        </th>
        <th class="text-center">
            @Html.DisplayName("Sỉ số")
        </th>
        <th class="text-center">
            @Html.DisplayName("Đã đăng ký")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLop)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.LT_TH)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.SiSo)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.ĐK)
            </td>
        </tr>
    }

</table>
