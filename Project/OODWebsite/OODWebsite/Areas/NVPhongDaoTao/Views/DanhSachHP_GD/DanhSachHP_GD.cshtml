@model IEnumerable<OODWebsite.HOCPHAN>

@{
    ViewBag.Title = "Danh sách học phần";
    Layout = "~/Areas/NVPhongDaoTao/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DANH SÁCH HỌC PHẦN</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("QuanLySV_GD", "QuanLySV_GD")'>Home</a></li>
                    <li class="breadcrumb-item active">Danh sách học phần</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="pl-4 pb-4">
    @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-default" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Mã học phần")
        </th>
        <th>
            @Html.DisplayName("Tên học phần")
        </th>
        <th class="text-center">
            @Html.DisplayName("Số tín chỉ")
        </th>
        <th class="text-center">
            @Html.DisplayName("Mã số khoa")
        </th>
        <th>
            @Html.DisplayName("Tuyên quyết")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.SoTinChi)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.MaSoKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TuyenQuyet)
            </td>
            <td>

                @Html.ActionLink("Sửa", "Edit", null, new { id = item.MSHP }, new { @class = "btn btn-default" })

                @Html.ActionLink("Xóa", "Delete", null, new { id = item.MSHP }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
