@model IEnumerable<OODWebsite.Models.LSM>

@{
    ViewBag.Title = "Lớp học phần được tạo";
    Layout = "~/Areas/QuanLyHeThong/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DANH SÁCH LỚP HỌC PHẦN</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("QuanLyNV_GD", "QuanLyNV_GD")'>Home</a></li>
                    <li class="breadcrumb-item active">Danh sách lớp học phần</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm())
{
    <b class="pl-5">Tìm kiếm:</b> @Html.DropDownList("Nam", Enumerable.Range(2019, 100).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
    @Html.DropDownList("HocKy", Enumerable.Range(1, 3).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
    <input type="submit" value="Tìm" class="btn btn-primary" />
}

<table class="table">

    <tr>
        <th>
            @Html.DisplayName("Mã nhân viên")
        </th>
        <th>
            @Html.DisplayName("Tên nhân viên")
        </th>
        <th>
            @Html.DisplayName("Tên lớp")
        </th>
        <th>
            @Html.DisplayName("Mã học phần")
        </th>
        <th>
            @Html.DisplayName("Tên học phần")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="pl-5">
                @Html.DisplayFor(modelItem => item.MaNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHP)
            </td>
        </tr>
    }

</table>
