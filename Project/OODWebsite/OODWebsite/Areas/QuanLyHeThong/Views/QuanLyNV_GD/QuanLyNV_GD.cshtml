@model IEnumerable<OODWebsite.NVPDT>

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/QuanLyHeThong/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>QUẢN LÝ NHÂN VIÊN</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("QuanLyNV_GD", "QuanLyNV_GD")'>Home</a></li>
                    <li class="breadcrumb-item active">Quản lý nhân viên</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="pl-4 pb-4">
    @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-default" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên nhân viên")
        </th>
        <th>
            @Html.DisplayName("Giới tính")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Mật khẩu")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matkhau)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", null, new { id = item.MaNV }, new { @class = "btn btn-default" })

            @Html.ActionLink("Xóa", "Delete", null, new { id = item.MaNV }, new { @class = "btn btn-default" })
            
        </td>
    </tr>
}

</table>
