@model OODWebsite.NVPDT

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/QuanLyHeThong/Views/Shared/_Layout.cshtml";
}

@*<h3>Are you sure you want to delete this?</h3>*@
<div class="Delete_nv">
    <h4>Xóa tài khoản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên nhân viên")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNV)
        </dd>

        <dt>
            @Html.DisplayName("Giới tính")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayName("Mật khẩu")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Matkhau)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-primary" /> 
             @Html.ActionLink("Hủy", "QuanLyNV_GD", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
